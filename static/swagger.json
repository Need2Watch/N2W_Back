{
  "openapi": "3.0.0",
  "info": {
    "description": "Control your movie night schedule",
    "version": "1.0.0",
    "title": "Need2Watch REST API",
    "contact": {
      "email": "pablorodriguezguillen@gmail.com"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "tags": [
    {
      "name": "User Request",
      "description": "Example API for requesting and return users"
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "tags": ["User Request"],
        "summary": "Creates a new user",
        "requestBody": {
          "description": "User Scheme",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/user"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": "OK"
          },
          "400": {
            "description": "Bad syntax or existing user"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "user": {
        "properties": {
          "user_id": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "first_name": {
            "type": "string"
          },
          "last_name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "country": {
            "type": "string"
          },
          "city": {
            "type": "string"
          }
        }
      }
    }
  }
}
